{
    // This file will extend the tsconfig.json file for the test environment
    // This means we will not apply the noUncheckedIndexedAccess option to the test files
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noUncheckedIndexedAccess": false // TODO fix errors ,then enable   
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.mock.ts",
        "src/__mocks__/**/*.ts"
    ]
} 